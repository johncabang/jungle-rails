<%= form_tag '/login' do %>
  <div class="login-form">
    <h1>Login</h1>
    <br>
    <div class="form-group"><%= text_field_tag :email, "", :placeholder => " Email Address", :class => "form-control" %></div>
    <div class="form-group"><%= password_field_tag :password, "", :placeholder => " Password", :class => "form-control"%></div>
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>